/* pages/test/testDetail/testDetail.wxss */

page {
  background-color: white;
}

/* 测试图片容器 */

.imgRoom {
  display: flex;
  justify-content: center;
}

/* 图片 */

.testImg {
  border-radius: 16px;
  margin: 32rpx;
}

/* 测试名字 */

.testName {
  display: flex;
  justify-content: center;
  font-size: 40rpx;
  color: #353535;
  font-weight: bold;
}

/* 做过测试的人 */

.peopleNum {
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #b2b2b2;
}

/* 测试描述 */

.description {
  margin: 52rpx 40rpx;
  font-size: 28rpx;
  color: #888;
  line-height: 50rpx;
}

/* 数字 */

.num {
  font-size: 80rpx;
  color: #6cc;
}

.txt {
  font-size: 26rpx;
  color: #b2b2b2;
}

/* min样式 */

.min {
  font-size: 40rpx;
  color: #b2b2b2;
}
/* 题目数量和预计用时 */
.myRoom {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 50rpx;
  margin-top:150rpx;
}

.rightRoom {
  display: flex;
  align-items: flex-end;
  margin-left: 35rpx;
}

.leftRoom {
  margin-right: 30rpx;
}

.line {
  border-left: 2rpx solid #6cc;
  height: 90rpx;
}

.mint {
  color: #6cc;
}

.text-mint {
  color: #6cc;
  font-size: 60rpx;
}

.collect {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.collectTxt {
  font-size: 22rpx;
  color: #b2b2b2;
}

.bottom {
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx;
  align-items: center;
  display: flex;
}

.start {
  color: white;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 690rpx;
  height: 90rpx;
  border-radius: 5000px;
  box-shadow: 0 0 15rpx rgba(102, 102, 204, 0.35);
  background: linear-gradient(45deg, #6cc, #c5f3d8);
  margin-left: 20rpx;
}
.restart
{
  border:solid 2rpx #6cc;
  color:#6cc;
  background:white;
    font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}
.re
{
  width: 290rpx;
  height: 90rpx;
}
/* 题目容器 */

.questionRoom {
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
}

/* 题目数 */

.qIndex {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 100rpx;
  margin-top: 150rpx;
}

/* 按钮高度 */

.cu-tag {
  width: 256rpx;
  height: 60rpx;
  margin: 20rpx;
}

.cu-tag+.cu-tag {
  margin-left: 20rpx;
}

/* 按钮容器 */

.btnChoice {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

/* 按钮样式 */

.btn-tab {
  border: 2rpx solid;
  border-color: #6cc;
  background-color: #6cc;
  color: #fff;
}

.btn-untab {
  border: 2rpx solid;
  border-color: #6cc;
  background-color: #fff;
  color: #6cc;
}

.pre {
  color: #6cc;
  font-size: 26rpx;
  margin-top: 86rpx;
  margin-bottom: 86rpx;
}

.viewRes {
  border-radius: 5000px;
  width: 200rpx;
  height: 200rpx;
  color: white;
  font-size: 36rpx;
  background: linear-gradient(45deg, #6cc, #c5f3d8);
  box-shadow: 0 0 15rpx rgba(102, 102, 204, 0.35);
  padding: 75rpx 28rpx;
}

.ynChoice {
  display: flex;
}

.yn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 5000px;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.yes-untab {
  color: #6cc;
  border: #6cc solid 2rpx;
  margin-right: 50rpx;
}

.yes-tab {
  color: white;
  margin-right: 50rpx;
  background-color: #6cc;
}

.no-tab {
  color: white;
  margin-left: 50rpx;
  background-color: #ff8080;
}

.no-untab {
  color: #ff8080;
  border: #ff8080 solid 2rpx;
  margin-left: 50rpx;
}

.margin-bottom-xl {
  margin-bottom: 100rpx;
}

.dotChoice {
  display: flex;
  flex-direction: column;
}

.secondRoom {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.dotRoom {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  background-color: #b2b2b2;
  border-radius: 5000px;
}

.dotColor {
  width: 20rpx;
  height: 20rpx;
  border-radius: 5000px;
  background-color: #6cc;
}

.dotLarge {
  width: 28px;
  height: 28px;
}

.txtRoom {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
}

.dotTxt {
  font-size: 28rpx;
  color: #888;
  /* margin: 0 50rpx; */
  margin-bottom: 30rpx;
}

.link {
  border-bottom: solid 4rpx #b2b2b2;
  width: 180rpx;
}

.linkColor {
  border-bottom: solid 4rpx #6cc;
  width: 180rpx;
}

/* 测试结果 */

.resRoom {
  background-color: #f3fbfb;
  padding: 40rpx;
  padding-bottom: 0rpx;
}

.res {
  margin-bottom: 40rpx;
  background-color: white;
  border: solid 2rpx gainsboro;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.resTitle {
  font-size: 56rpx;
  border-bottom: solid 2rpx #6cc;
  width: 500rpx;
  display: flex;
  justify-content: center;
  padding-bottom: 30rpx;
  margin-bottom: 50rpx;
}

.paragraph {
  margin-top: 32px;
  display: flex;
  flex-direction: column;
}

.subtitle {
  font-size: 34rpx;
  color: black;
  margin-bottom: 20rpx;
}

.content {
  font-size: 28rpx;
  color: #888;
  line-height: 48rpx;
}

.resEnd {
  font-size: 60rpx;
  display: flex;
  justify-content: flex-end;
  margin: 20rpx 0;
}

.flexCol {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.iconTxt {
  font-size: 22rpx;
  color: #b2b2b2;
}
