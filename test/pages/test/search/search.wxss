} */

/* 标签样式1 边框、背景颜色 */
.pattern1 {
  border: 2rpx solid;
  border-color: #b2b2b2;
  background-color: #fff;
  color: #b2b2b2;
}
.pattern2 {
  border: 2rpx solid;
  border-color: #66cccc;
  background-color: #66cccc;
  color: #fff;
}
.pattern3 {
  border: 2rpx solid;
  border-color: #66cccc;
  background-color: #fff;
  color: #66cccc;
}
/* 搜索按钮 */
.cu-bar .search-form+.action {
  width: 16%;
}
.searchButton{
  background-color: purple;
  color:#7e7a7a;
  font-size:26rpx;
  font-weight: 600;
}


.margin{
  margin: 120rpx;
