<!--pages/test/classify/classify.wxml-->
<!-- 搜索框 -->
<view class="cu-bar bg-white search fixed" style="top:{{CustomBar}}px;">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input disabled="true" bindtap="getSearch" placeholder="搜索"></input>
  </view>
</view>
<view class="padding-xl"></view>

<!-- 导航栏 -->
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item {{index==TabCur?'text-tab':'text-untab'}}" wx:for="{{sortList}}" bindtap="tabSelect" data-id="{{index}}">
      {{item}}
    </view>
  </view>
</scroll-view>

<view wx:for="{{testList}}" wx:key>
<view class="testCard testName" style="background:url({{item.img}})">{{item.name}}</view>
</view>

<view class="end">- End -</view>