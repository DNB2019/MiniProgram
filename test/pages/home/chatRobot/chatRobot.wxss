page {
  background-color: #f3fbfb;
}

.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: white;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
  padding-bottom: 20rpx;
  padding-top: 16rpx;
}

input {
  width: 580rpx;
  height: 9.33vw;
  background-color: #f1f1f1;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}

.leftMsg {
  font-size: 26rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-top-left-radius: 1rpx;
  border-top-right-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  z-index: 10;
  box-shadow: 0rpx 2rpx 4rpx rgba(219, 219, 219, 0.35);
}

.rightMsg {
  font-size: 26rpx;
  color: white;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #6cc;
  margin-right: -1.6vw;
  border-top-left-radius: 16px;
  border-top-right-radius: 1rpx;
  border-bottom-left-radius: 16px;
  border-bottom-right-radius: 16px;
  z-index: 10;
  box-shadow: 0rpx 2rpx 4rpx rgba(219, 219, 219, 0.35);
}

.mybtn {
  color: white;
  background-color: #6cc;
  width: 102rpx;
  height: 30px;
  padding: 10rpx 20rpx;
  border-radius: 5000px;
  min-height: 50rpx;
  font-weight: 500;
  font-size: 26rpx;
  size: mini;
}

.disMsg {
  /* font-size: 26rpx; */
  color: #444;
  /* line-height: 7vw; *//* padding: 2vw 2.5vw; */
