  margin-left: -1.6vw;
  border-top-left-radius: 1rpx;
  border-top-right-radius: 16px;
  border-bottom-left-radius: 16px;
  border-bottom-right-radius: 16px;
  z-index: 10;
  box-shadow: 0rpx 2rpx 4rpx rgba(219, 219, 219, 0.35);
  height: 300rpx;
  display: flex;
  flex-direction: column;
}

.title {
  padding: 28rpx;
  border-bottom: solid 2rpx #e5e5e5;
  font-size: 28rpx;
}

.contentRoom {
  display: flex;
