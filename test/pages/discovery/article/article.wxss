.myform {
  display: flex;
  width: 100%;
  height: 152rpx;
}

/* 互动数据框 */

.left {
  color: #b2b2b2;
  font-size: 40rpx;
  border-right: 2rpx gainsboro solid;
  padding: 0 80rpx;
  max-width: 35%;
}

.right {
  color: #b2b2b2;
  font-size: 40rpx;
  border-left: 2rpx gainsboro solid;
  padding: 0 80rpx;
  max-width: 35%;
  overflow: hidden;
}

.middle {
  color: #b2b2b2;
  font-size: 40rpx;
  overflow: hidden;
  max-width: 35%;
}

.interaction {
  height: 80rpx;
  min-height: 80rpx;
  overflow: hidden;
}
