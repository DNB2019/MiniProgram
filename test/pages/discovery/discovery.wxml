<!--pages/discovery/discovery.wxml-->
<!-- 搜索框 -->
<scroll-view scroll-y class="scrollPage">

<image class='background' src="../../images/背景图.png" mode="aspectFill"></image>

<view class="cu-bar bg-white search fixed" style="top:{{CustomBar}}px;">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="输入搜索的关键词" confirm-type="search"></input>
  </view>

  <view class="action">
    <button class="cu-btn bg-gradual-blue shadow-blur round">搜索</button>
  </view>
</view>
<view class="padding-xl"></view>


<view class="cu-bar solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-black">文章干货</text>
    </view>
  </view>

<view class="cu-list grid col-2">
  <view class="cu-item flex justify-center" wx:for="{{list}}" wx:key>
    <view>
    <image class='article-img'src="{{item.img}}"></image>
    </view>
    <view class="article-title">
      <view class="text-cut">{{item.title}}</view>
    </view>
</view>
</view>
<!-- 卡片 -->
  <view style="float: right">
    <text class="text-more" bindTap="more">更多</text>
    <text class="cuIcon-right lg text-grey" ></text>
</view>

<view class="margin-df"></view>

<view class="cu-bar solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-black">心理课堂</text>
    </view>
</view>



</scroll-view>



