/* pages/discovery/article-li/article-li.wxss */

page{
  background-color: white
}
/* 卡片下边框 */

.cu-card.article {
  border-bottom: solid #eeeeee 2rpx;
}
/* 标题颜色、大小 */

.cu-card.article>.cu-item .content .text-content {
  font-size: 32rpx;
  color: #353535;
  height: 90rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

/* 调整卡片的上边距 */

.cu-card.article>.cu-item .content {
  display: flex;
  padding: 0 30rpx;
  margin-top: 30rpx;
}

/* 作者 */

.myauthor {
  font-size: 24rpx;
  color: #b2b2b2;
}

/* 标签 */

.mytag {
  font-size: 24rpx;
  color: #6cc;
  max-height: 65rpx;
  overflow: hidden;
}

/* 图片 */

.cu-card.article>.cu-item .content>image {
  width: 180rpx;
  height: 120rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 6rpx;
}



.cu-card.article>.cu-item {
padding-bottom: 0rpx;
}

/* 图片右边 */

.cu-card.article>.cu-item .content .desc {
  flex-direction: row;
  margin-bottom: 20rpx;
}

/* 标题右边 */

.right-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 60%;
  align-items: flex-end;
}

.cu-bar .search-form input {
  margin-left: 16px;
}
/* 导航栏点击时文字 */
.text-tab
{
  color: #6ccccc;
  font-size:30rpx;
  border-bottom: #6ccccc solid 2rpx;
}
/* 导航栏未点击时文字 */
.text-untab
{
  font-size:30rpx;
}
.text-center {
text-align: center;
border-bottom: solid #eeeeee 2rpx;
}
.mymargin {
  margin: 100rpx;
}
.imgRoom{
  display: flex;
  justify-content: center;
}
.end
{
  font-size:28rpx;
  color:#b2b2b2;
  justify-content: center;
  display: flex;
  margin-top: 30rpx;
}
.myImg
{
  width:100%;
}
.nav .cu-item
{
  margin:0rpx;
}